<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MacrosCalculator" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="AlertDialogBackground" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/custom_dialog_background</item>
    </style>
    <style name="CustomAlertDialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.MacrosCalculator" parent="Base.Theme.MacrosCalculator" />
    <style name="Base.Theme.MacrosCalculator.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>
</resources>